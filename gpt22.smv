MODULE main
VAR
  request : boolean;
  state : {ready, busy};
ASSIGN
  init(state) := ready;
  next(state) :=
    case
      state = ready & request : busy;
      state = busy & !request : ready;
      state = busy & request : busy;
      TRUE : state;
    esac;
SPEC
  AG(request -> AF state = busy);
